<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle outer drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>

    <!-- Glass card -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <!-- Semi-transparent white to emulate frosted look -->
            <solid android:color="#80FFFFFF" />
            <!-- Thin white border for glass edge -->
            <stroke android:width="1dp" android:color="#4DFFFFFF" />
        </shape>
    </item>

    <!-- Top highlight to mimic light passing through glass -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="90"
                android:startColor="#33FFFFFF"
                android:centerColor="#19FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
